{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hugvi-app",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "beforeDevCommand": "deno task dev",
    "beforeBuildCommand": "deno task build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:folders.db"]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Hugvi",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
